<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/asanName"
        android:text="শবাসন"
        android:gravity="center"
        android:textColor="#dedc8823"
        android:paddingTop="5sp"
        android:textSize="35sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/asanCount"
        android:text="1"
        android:gravity="center"
        android:textColor="#de117624"
        android:paddingTop="45sp"
        android:textSize="25sp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:text="."
        android:gravity="center"
        android:textColor="#808080"
        android:paddingTop="80sp"
        android:textSize="15sp"
        />
    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="90sp"
        style="@android:style/Widget.Holo.Light.ProgressBar.Horizontal"
        android:progressBackgroundTint="#d2cfcf"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentStateImage"
        android:src="@drawable/shobasan"
        android:paddingTop="120sp"
        />

</android.support.constraint.ConstraintLayout>